{
  "JobScheduler": {
    "Jobs": {
      "container-app-health": {
        "JobName": "container-app-health",
        "Endpoint": "https://int-svc-be-capp-dev.whitesky-4effbccc.centralus.azurecontainerapps.io/health",
        "HttpMethod": "GET",
        "AuthType": "none",
        "TimeoutSeconds": 30,
        "RetryPolicy": { 
          "MaxAttempts": 3,
          "BaseDelayMs": 1000,
          "BackoffMultiplier": 2.0,
          "MaxDelayMs": 30000,
          "RetryableStatusCodes": [429, 502, 503, 504]
        },
        "Tags": {
          "category": "health-check",
          "priority": "low",
          "team": "platform"
        }
      },
      "daily-batch": {
        "JobName": "daily-batch",
        "Endpoint": "https://your-api.azurecontainerapps.io/api/batch-process",
        "HttpMethod": "POST",
        "AuthType": "bearer",
        "AuthSecretName": "DAILY_BATCH_TOKEN",
        "RequestBody": "{\"operation\": \"daily-sync\", \"includeArchived\": false}",
        "TimeoutSeconds": 120,
        "RetryPolicy": {
          "MaxAttempts": 5,
          "BaseDelayMs": 2000,
          "BackoffMultiplier": 2.0,
          "MaxDelayMs": 60000,
          "RetryableStatusCodes": [429, 502, 503, 504]
        },
        "Tags": {
          "category": "batch-processing",
          "priority": "high",
          "team": "data"
        }
      }
    },
    "Logging": {
      "EnableStructuredLogging": true,
      "IncludeMetadata": true,
      "LogLevel": "Information",
      "ExternalLoggingUrl": null,
      "DatadogApiKey": null,
      "DatadogSite": "us3.datadoghq.com"
    },
    "Metrics": {
      "EnableMetrics": true,
      "EnableCustomCounters": true,
      "MetricsFlushIntervalSeconds": 60
    }
  }
}
