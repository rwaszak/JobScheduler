{
  "JobScheduler": {
    "Jobs": {
      "containerAppHealth": {
        "JobName": "containerAppHealth",
        "Endpoint": "https://your-prod-app.azurecontainerapps.io/health",
        "HttpMethod": "GET",
        "AuthType": "None",
        "TimeoutSeconds": 60,
        "RetryPolicy": {
          "MaxRetries": 3,
          "BaseDelayMs": 2000,
          "BackoffMultiplier": 2.0,
          "MaxDelayMs": 60000,
          "RetryableStatusCodes": [429, 502, 503, 504]
        }
      }
    },
    "Logging": {
      "DatadogSite": "us3.datadoghq.com"
    }
  }
}
