{
  "AppSettings": {
    "Environment": "sit",
    "DatadogEnvironment": "sit",
    "Version": "1.0.0",
    "ServiceName": "job-scheduler-functions",
    "KeyVaultUrl": "https://jobscheduler-sit-kv.vault.azure.net/",
    "IntegrationLayerDevHealthEndpoint": "https://int-svc-be-capp-sit.whitesky-4effbccc.centralus.azurecontainerapps.io/health"
  },
  "JobScheduler": {
    "Jobs": {
      "containerAppHealth": {
        "JobName": "containerAppHealth",
        "Endpoint": "https://int-svc-be-capp-sit.whitesky-4effbccc.centralus.azurecontainerapps.io/health",
        "HttpMethod": "GET",
        "AuthType": "none",
        "TimeoutSeconds": 30,
        "RetryPolicy": { 
          "MaxAttempts": 5,
          "BaseDelayMs": 2000,
          "BackoffMultiplier": 2.0,
          "MaxDelayMs": 60000,
          "RetryableStatusCodes": [429, 502, 503, 504]
        }
      }
    },
    "Logging": {
      "EnableStructuredLogging": true,
      "IncludeMetadata": true,
      "LogLevel": "Information",
      "DatadogSite": "us3.datadoghq.com"
    },
    "Metrics": {
      "EnableMetrics": true,
      "EnableCustomCounters": true,
      "MetricsFlushIntervalSeconds": 60
    }
  }
}
